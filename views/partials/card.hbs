<div class="card">
  <div class="card-image">
    {{#if images}}
      <img src="{{images.1.url}}" alt="{{name}}" />
    {{else}}
      <img
        src="https://image-placeholder.com/images/actual-size/300x250.png"
        alt="{{name}} placeholder"
      />
    {{/if}}
  </div>
  <div class="card-bottom">
    <div class="card-title">
      <h3>{{name}}</h3>
    </div>
    {{#if genres}}
      <div class="card-genres">
        <ul>
          {{#genres}}
            <li>{{.}}</li>
          {{/genres}}
        </ul>
      </div>
    {{/if}}
  </div>
  <div class="card-btn-container">
    {{#if total_tracks}}
      <a href="/album/{{id}}" class="card-btn">Tracks</a>
    {{else}}
      <a href="/albums/{{id}}" class="card-btn">Releases</a>
    {{/if}}
  </div>
</div>